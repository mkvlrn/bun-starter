{
  "name": "bun-starter",
  "description": "A template for Bun projects using typescript",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/bun-starter"
  },
  "keywords": [
    "bun",
    "typescript",
    "template"
  ],
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "start": "bun src/main.ts",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "neverthrow": "^8.2.0"
  }
}
